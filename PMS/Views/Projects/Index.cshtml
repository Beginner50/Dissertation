@* Views/Projects/Projects.cshtml *@
@{
    ViewData["Title"] = "Projects";
}

@section Navigation {
    @await Component.InvokeAsync("Navigation")
}

<div class="main-dashboard">

    @* 1. Left Toolbar Area: Container is intentionally plain/invisible *@
    <div class="project-toolbar-area">
        <button class="toolbar-button create-project">
            <i class="bi bi-plus-circle"></i> Create Project
        </button>
        <button class="toolbar-button join-project">
            <i class="bi bi-person-add"></i> Join Project
        </button>
    </div>

    @* 2. Middle Content Area: List of Projects *@
    <div class="projects-list-container">
        <h2 class="section-title">My Projects</h2>

        @* --- Sample Project Entries (Replace with Loop/Partial View) --- *@
        @* The entire project entry is now an anchor tag, navigating to the project details *@
        <div class="project-entry"> @* <-- Now a DIV to hold the content/layout *@
            <div class="project-info">
                @* The link now wraps the project name *@
                <a class="project-name-link" href="@Url.Action("Index", "Projects", new { id = 101 })">
                    <span class="project-name">PMS Dissertation</span>
                </a>
                <span class="project-student">Student: John Doe</span>
            </div>
            <button class="more-options-button" type="button">
                <i class="bi bi-three-dots-vertical"></i>
            </button>
        </div>

        <div class="project-entry">
            <div class="project-info">
                <a class="project-name-link" href="@Url.Action("Index", "Projects", new { id = 102 })">
                    <span class="project-name">E-Commerce Platform Redesign</span>
                </a>
                <span class="project-student">Student: Jane Smith</span>
            </div>
            <button class="more-options-button" type="button">
                <i class="bi bi-three-dots-vertical"></i>
            </button>
        </div>
        @* ----------------------------------------------------------------- *@

    </div>

    @* 3. Right Reminders Area: List of Reminders *@
    <div class="reminders-area">
        <h2 class="section-title">Reminders</h2>

        @* Upcoming Reminder *@
        <div class="reminder-entry">
            <div class="reminder-datetime">
                <span class="reminder-date">Dec 15, 2025</span>
                <span class="reminder-time">10:00 AM</span>
            </div>
            <p class="reminder-description">Final review meeting for Sprint 3.</p>
        </div>

        @* Applicable but older Reminder *@
        <div class="reminder-entry">
            <div class="reminder-datetime">
                <span class="reminder-date">Dec 01, 2025</span>
                <span class="reminder-time">09:00 AM</span>
            </div>
            <p class="reminder-description">Submit weekly progress report.</p>
        </div>

        @* Completed/No Longer Applicable Reminder (Crossed out) *@
        <div class="reminder-entry completed">
            <div class="reminder-datetime">
                <span class="reminder-date">Nov 28, 2025</span>
                <span class="reminder-time">1:00 PM</span>
            </div>
            <p class="reminder-description">Setup CI/CD pipeline for Project Alpha.</p>
        </div>

    </div>
</div>