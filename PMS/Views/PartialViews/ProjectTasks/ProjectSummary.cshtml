@{
    var projectId = ViewBag.ProjectID;
    var projectLabel = projectId != null ? $"Project {projectId}" : "Project";
    var projectTitle = ViewBag.ProjectTitle ?? projectLabel;
    var projectDescription = ViewBag.ProjectDescription ?? "No description provided.";
    var projectStudent = ViewBag.ProjectStudent ?? "Unassigned";

}

<div class="project-summary">
    <h2 class="section-title">Project Info</h2>

    <div class="project-summary-body">
        <div class="project-title">@projectTitle</div>

        <p class="project-description">@projectDescription</p>

        <div class="project-stakeholders">
            <div class="stakeholder-item">
                <span class="stakeholder-role">Student:</span>
                <span class="stakeholder-name">@projectStudent</span>
                <span class="stakeholder-id">2311146</span>
            </div>
            <div class="stakeholder-item">
                <span class="stakeholder-role">Supervisor:</span>
                <span class="stakeholder-name">Dr. John Doe</span>
                <span class="stakeholder-id"> 1</span>
            </div>
        </div>
    </div>
</div>